{
	/* formatting */
	"editor.defaultFormatter": "biomejs.biome",
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[xml]": {
		"editor.defaultFormatter": "redhat.vscode-xml"
	},
	"[snippets]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},

	/* recommended extension config */
	"template-string-converter.addBracketsToProps": true,
	"template-string-converter.autoRemoveTemplateString": true,
	"stylelint.validate": ["css", "scss", "javascriptreact", "typescriptreact"],
	"cSpell.words": [
		"abtest",
		"ahooks",
		"airtable",
		"biomejs",
		"bunx",
		"chev",
		"Cielo",
		"contentful",
		"conveniens",
		"csvg",
		"decompile",
		"Dopplio",
		"drei",
		"ECDSBNCV",
		"fdesktop",
		"fmobile",
		"fresponsive",
		"ftablet",
		"gifs",
		"gsap",
		"gtag",
		"Headshot",
		"hubspot",
		"insta",
		"Kcnc",
		"kkuk",
		"MSVG",
		"multipass",
		"pcms",
		"preinstall",
		"RCPOB",
		"reformcollective",
		"reimagines",
		"Sanjay",
		"scrolltrigger",
		"Sqft",
		"stylelint",
		"stylis",
		"sublicensable",
		"svgr",
		"Tastewise",
		"TCPA",
		"Thoughtly",
		"TSVG",
		"Tweens",
		"Typegen",
		"UCITA",
		"unitless",
		"webp",
		"Whyte",
		"XSVG",
		"yoyo"
	],
	"cSpell.ignorePaths": [
		"package.json",
		"package-lock.json",
		"node_modules",
		"vscode-extension",
		".git/objects",
		".vscode",
		".vscode-insiders",
		"pnpm-lock.yaml",
		"gatsby-config.ts"
	],

	/* workbench settings */	
	"typescript.tsdk": "./node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"workbench.editor.customLabels.patterns": {
		"**/index.tsx": "${dirname} / index.tsx"
	},
    "editor.linkedEditing": true,

	/* unsorted settings */
	"": ""
}
