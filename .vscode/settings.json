{
	/* formatting */
	"editor.defaultFormatter": "biomejs.biome",
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[xml]": {
		"editor.defaultFormatter": "redhat.vscode-xml"
	},
	"[snippets]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},

	/* recommended extension config */
	"template-string-converter.addBracketsToProps": true,
	"template-string-converter.autoRemoveTemplateString": true,
	"stylelint.validate": ["css", "scss", "javascriptreact", "typescriptreact"],
	"cSpell.words": [
		"ahooks",
		"airtable",
		"biomejs",
		"bunx",
		"chev",
		"contentful",
		"conveniens",
		"csvg",
		"decompile",
		"drei",
		"fdesktop",
		"fmobile",
		"fresponsive",
		"ftablet",
		"gifs",
		"gsap",
		"hubspot",
		"multipass",
		"pcms",
		"preinstall",
		"reformcollective",
		"stylelint",
		"stylis",
		"sublicensable",
		"svgr",
		"TCPA",
		"Thoughtly",
		"UCITA",
		"yoyo"
	],
	"cSpell.ignorePaths": [
		"package.json",
		"package-lock.json",
		"node_modules",
		"vscode-extension",
		".git/objects",
		".vscode",
		".vscode-insiders",
		"pnpm-lock.yaml"
	],

	/* workbench settings */
	"typescript.tsdk": "node_modules/typescript/lib",
	"workbench.editor.customLabels.patterns": {
		"**/index.tsx": "${dirname} / index.tsx"
	},

	/* unsorted settings */
	"": ""
}
