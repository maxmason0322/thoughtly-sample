{
	"name": "thoughtly",
	"private": true,
	"description": "Thoughlty Marketing Site",
	"version": "0.1.0",
	"author": "Reform Collective",
	"packageManager": "pnpm@9.1.4+sha256.30a1801ac4e723779efed13a21f4c39f9eb6c9fbb4ced101bce06b422593d7c9",
	"repository": {
		"type": "git",
		"url": "https://github.com/gatsbyjs/thoughtly"
	},
	"dependencies": {
		"@contentful/rich-text-react-renderer": "15.19.6",
		"@contentful/rich-text-types": "16.3.5",
		"@radix-ui/react-form": "0.0.3",
		"@total-typescript/ts-reset": "0.5.1",
		"@types/gtag.js": "0.0.19",
		"@types/segment-analytics": "0.0.38",
		"@uidotdev/usehooks": "2.4.1",
		"ahooks": "3.7.11",
		"dotenv": "16.4.5",
		"gatsby": "5.13.4",
		"gatsby-adapter-netlify": "1.1.4",
		"gatsby-plugin-clarity": "1.0.1",
		"gatsby-plugin-contentful-optional-fields": "2.2.2",
		"gatsby-plugin-google-gtag": "5.13.1",
		"gatsby-plugin-image": "3.13.1",
		"gatsby-plugin-manifest": "5.13.1",
		"gatsby-plugin-netlify": "5.1.1",
		"gatsby-plugin-pnpm-gatsby-5": "1.2.11",
		"gatsby-plugin-robots-txt": "1.8.0",
		"gatsby-plugin-segment-js": "5.0.0",
		"gatsby-plugin-sharp": "5.13.1",
		"gatsby-plugin-sitemap": "6.13.1",
		"gatsby-plugin-styled-components": "6.13.1",
		"gatsby-plugin-svgr": "3.0.0-beta.0",
		"gatsby-plugin-tsconfig-paths": "1.0.6",
		"gatsby-source-contentful": "8.13.1",
		"gatsby-transformer-json": "5.13.1",
		"gatsby-transformer-sharp": "5.13.1",
		"gsap": "file:gsap-bonus.tgz",
		"leading-trim": "1.0.2",
		"minisearch": "6.3.0",
		"react": "18.3.1",
		"react-calendly": "4.3.0",
		"react-dom": "18.3.1",
		"react-use-intercom": "5.4.0",
		"styled-components": "6.1.9",
		"stylis": "4.3.2",
		"the-new-css-reset": "1.11.2",
		"use-deep-compare": "1.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.0",
		"@types/color-convert": "2.0.3",
		"@types/node": "20.12.7",
		"@types/reach__router": "1.3.15",
		"@types/react": "18.3.1",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"stylelint": "16.4.0",
		"stylelint-config-reform-collective": "github:reformcollective/stylelint-config-reform",
		"typescript": "5.4.5"
	},
	"license": "0BSD",
	"scripts": {
		"build": "gatsby build",
		"format": "biome check --apply . && npm run lint:css",
		"format-temp": "pnpm dlx prettier 'src/**/*.tsx' --write && npm run format && pnpm i",
		"format-unsafe": "biome check --apply-unsafe . && npm run lint:css",
		"lint": "biome lint .",
		"lint:css": "npx stylelint './src/**/*.{js,jsx,ts,tsx}' --fix || exit 0",
		"start": "gatsby develop -H 0.0.0.0",
		"dev": "npm run start",
		"serve": "gatsby serve",
		"clean": "gatsby clean",
		"type-check": "tsc --noEmit",
		"checks": "(npm run type-check || (echo 'Type check failed.' && exit 1)) && (npm run lint || (echo 'Lint check failed.' && exit 1)) && (npm run build || (echo 'Build failed.' && exit 1)) && echo 'All checks passed.'",
		"preinstall": "npx only-allow pnpm",
		"lighthouse": "bunx lighthouse http://localhost:9000 --view --chrome-flags='--headless'",
		"prepare": "husky"
	},
	"stylelint": {
		"extends": "stylelint-config-reform-collective"
	},
	"browserslist": [
		"last 99 chrome versions and last 1 year",
		"last 99 ChromeAndroid versions and last 1 year",
		"last 99 Safari versions and last 1 year",
		"last 99 iOS versions and last 1 year",
		"last 99 firefox versions and last 1 year",
		"last 99 FirefoxAndroid versions and last 1 year"
	],
	"lint-staged": {
		"*.{ts,tsx,js,css}": "stylelint --fix",
		"*.{ts,tsx,json,js,css}": "biome check --apply"
	}
}
